<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Approval Page</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .navbar a {
            color: white;
            text-decoration: none;
            margin-left: 15px;
        }
        .form-container {
            max-width: 700px;
            margin: 50px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        .form-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input, .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
        }
        .btn-submit {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1em;
            cursor: pointer;
            margin-top: 10px;
        }
        .btn-submit:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <div class="navbar">
        <div>Project Portal</div>
        <div>
            <a href="/">Home</a>
            <a href="/student/login">back</a>
            <a href="/student/logout">Logout</a>
        </div>
    </div>

    <!-- Form Section -->
    <div class="form-container">
        <h2 class="form-header">Project Approval Form</h2>
        <form id="projectApprovalForm">
            <!-- Team Member Names -->
            <div class="form-group">
                <label for="member1">Member 1 Name</label>
                <input type="text" id="member1" placeholder="Enter Member 1's name" required>
            </div>
            <div class="form-group">
                <label for="member2">Member 2 Name</label>
                <input type="text" id="member2" placeholder="Enter Member 2's name" required>
            </div>
            <div class="form-group">
                <label for="member3">Member 3 Name</label>
                <input type="text" id="member3" placeholder="Enter Member 3's name" required>
            </div>
            <div class="form-group">
                <label for="member4">Member 4 Name</label>
                <input type="text" id="member4" placeholder="Enter Member 4's name" required>
            </div>

            <!-- Project Title -->
            <div class="form-group">
                <label for="projectTitle">Project Title</label>
                <input type="text" id="projectTitle" placeholder="Enter the project title" required>
            </div>

            <!-- Project Description -->
            <div class="form-group">
                <label for="projectDescription">Project Description</label>
                <textarea id="projectDescription" rows="5" placeholder="Describe the project..." required></textarea>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-submit">Submit Project</button>
        </form>
    </div>

    <script>
        // JavaScript for form handling
        document.getElementById('projectApprovalForm').addEventListener('submit', function (e) {
            e.preventDefault(); // Prevent default form submission

            // Fetch form values
            const member1 = document.getElementById('member1').value;
            const member2 = document.getElementById('member2').value;
            const member3 = document.getElementById('member3').value;
            const member4 = document.getElementById('member4').value;
            const projectTitle = document.getElementById('projectTitle').value;
            const projectDescription = document.getElementById('projectDescription').value;

            // Display submission alert
            alert(`Project Submitted Successfully!\n\nMembers:\n- ${member1}\n- ${member2}\n- ${member3}\n- ${member4}\n\nTitle: ${projectTitle}\nDescription: ${projectDescription}`);
        });
    </script>
</body>
</html>
